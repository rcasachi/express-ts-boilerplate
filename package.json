{
  "name": "express-ts-boilerplate",
  "version": "0.1.0",
  "main": "src/server.js",
  "scripts": {
    "start-dist": "tsc && node dist/server.js",
    "build": "tsc",
    "start": "NODE_ENV=production node ./dist/server.js",
    "dev": "nodemon --watch 'src/' --exec 'ts-node src/server.ts' -e ts",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "typeorm": "ts-node -r ./tsconfig.json ./node_modules/typeorm/cli.js",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:check"
    }
  },
  "repository": "git@github.com:rcasachi/express-ts-boilerplate.git",
  "author": "Rafael Casachi <rcasachi@gmail.com>",
  "license": "GNU",
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "indicative": "^7.4.4",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.31"
  }
}
